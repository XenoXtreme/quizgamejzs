datasource quizdom {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

// TEAM MODEL
model Team {
  id        String   @id @default(auto()) @map("_id") @quizdom.ObjectId
  team      String
  member    Member[]
  category  String?
  password  String
  school    String
  role      String?  @default("TEAM")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // Add relation to BuzzerState
  buzzerPresses BuzzerState[]
}

type Member {
  member1 MemberParam
  member2 MemberParam
  member3 MemberParam
  member4 MemberParam
}

type MemberParam {
  name  String
  class String
}

// BUZZER STATE MODEL
model BuzzerState {
  id        String   @id @default(auto()) @map("_id") @quizdom.ObjectId
  isPressed Boolean  @default(false)
  teamId    String?  @quizdom.ObjectId
  team      Team?    @relation(fields: [teamId], references: [id])
  pressedAt DateTime @default(now())
  round     Int      @default(1)
  questionNumber Int  @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}